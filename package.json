{
  "name": "__PROJECT_NAME__",
  "version": "1.0.0",
  "scripts": {
    "dev": "nodemon --ext ts --exec ts-node -e ts,graphql src/index.ts",
    "start": "node dist",
    "build": "rm -rf dist && tsc",
    "deploy": "now --public --dotenv && now alias && now rm --yes --safe airbnb",
    "gen-schemas": "graphql get-schema -p database && graphql get-schema -p gateway",
    "seed": "graphql query queries/seed.graphql --all -p database"
  },
  "dependencies": {
    "apollo-link-http": "^1.2.0",
    "bcryptjs": "^2.4.3",
    "graphql-import": "^0.1.3",
    "graphql-remote": "^0.1.8",
    "graphql-tag": "^2.5.0",
    "graphql-yoga": "^0.2.0",
    "jsonwebtoken": "^8.1.0",
    "node-fetch": "^1.7.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "graphql-cli": "^2.0.2",
    "nodemon": "^1.12.1",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.2"
  },
  "now": {
    "alias": "airbnb"
  }
}
